{
  "swagger": "2.0",
  "info": {
    "title": "API V1",
    "version": "v1"
  },
  "paths": {
    "/api/v1/authors": {
      "get": {
        "summary": "Retrieves all authors",
        "tags": [
          "Authors"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "name": {
                  "type": "string"
                },
                "email": {
                  "type": "string"
                }
              },
              "required": [
                "id",
                "name",
                "email"
              ]
            }
          }
        }
      },
      "post": {
        "summary": "Creates an author",
        "tags": [
          "Author"
        ],
        "consumes": [
          "application/json",
          "application/x-www-form-urlencoded"
        ],
        "parameters": [
          {
            "name": "author",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "email": {
                  "type": "string"
                },
                "birth_date": {
                  "type": "string",
                  "format": "DD-MM-YYYY"
                },
                "publications": {
                  "type": "array",
                  "items": {
                    "properties": {
                      "title": {
                        "type": "string"
                      },
                      "body": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "title",
                      "body"
                    ]
                  }
                }
              },
              "required": [
                "name",
                "email",
                "birth_date"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "422": {
            "description": "Invalid request"
          }
        }
      }
    },
    "/api/v1/authors/{id}": {
      "get": {
        "summary": "Retrieves an author",
        "tags": [
          "Author"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "name": {
                  "type": "string"
                },
                "email": {
                  "type": "string"
                }
              },
              "required": [
                "id",
                "name",
                "email"
              ]
            }
          },
          "404": {
            "description": "Not found"
          }
        }
      }
    }
  }
}